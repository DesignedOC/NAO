{% extends 'base.html.twig' %}

{% block vich_file_row -%}
    {% set force_error = true %}
    {{- block('form_row') }}
{%- endblock %}

{% block vich_file_widget %}
    {% spaceless %}
        <div class="vich-file">
            {{ form_widget(form.file) }}
            {% if form.delete is defined %}
                {{ form_row(form.delete) }}
            {% endif %}

            {% if download_uri %}
                <a href="{{ download_uri }}">{{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}</a>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}

{% block vich_image_row -%}
    {% set force_error = true %}
    {{- block('form_row') }}
{%- endblock %}

{% block vich_image_widget %}
    {% spaceless %}
        <div class="vich-image row">
                <div class="col-md-12">
                    <div class="custom-file">
                        {{ form_widget(form.file, {'attr': {'class': 'custom-file-input' }}) }}
                        <label class="custom-file-label" for="inputGroupFile04"></label>
                    </div>
                </div>
            {% if image_uri %}
                <div class="col-md-6 mt-3">
                    <a href="{{ image_uri }}"><img src="{{ image_uri }}" alt="{{ app.user.image }}" /></a>
                </div>
            {% endif %}
            {% if form.delete is defined %}
                <div class="col-md-6 mt-3">
                    {{ form_row(form.delete) }}
                </div>
            {% endif %}
            {#{% if download_uri %}#}
                {#<a href="{{ download_uri }}">{{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}</a>#}
            {#{% endif %}#}
        </div>
    {% endspaceless %}
{% endblock %}
