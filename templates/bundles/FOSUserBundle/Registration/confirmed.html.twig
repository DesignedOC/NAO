{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
{% endblock %}
{% block body %}
    {% include 'front/parts/_header.html.twig' %}
<div class="headline mb-4">
    <div class="container">
        <h1 class="pt-4 mb-1 text-center">Bienvenue sur NAO</h1>
        <p class="text-center">Vous pouvez désormais accéder à l'interface</p>
    </div>
</div>
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-md-center">
        <section class="col-md-7 text-center">
            {% block fos_user_content %}
                <p class="text-center">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                {% if targetUrl %}
                <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}
            {% endblock fos_user_content %}
            <a class="btn btn-l-log" href="/interface/">Accéder à l'interface</a>
        </section>
    </div>
</div>

    <div class="footer-black">
        {% include 'front/parts/_footer.html.twig' %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/front.js') }}"></script>
{% endblock %}
