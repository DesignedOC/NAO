{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Confirmer votre inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
{% endblock %}
{% block body %}
    {% include 'front/parts/_header.html.twig' %}
<div class="headline mb-4">
    <div class="container">
        <h1 class="pt-4 mb-1 text-center">Confirmer votre inscription</h1>
        <p class="text-center">Vous avez re√ßu un lien dans votre boite email</p>
    </div>
</div>
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-md-center">
    <section class="col-md-7">
        {% block fos_user_content %}
            <p>{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
        {% endblock fos_user_content %}
    </section>
    </div>
</div>

    <div class="footer-black">
        {% include 'front/parts/_footer.html.twig' %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/front.js') }}"></script>
{% endblock %}