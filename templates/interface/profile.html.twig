{% extends 'base.html.twig' %}

{% block title %}NAO - Membre {{ app.user|capitalize }}{% endblock %}
{% block description %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
{% endblock %}

{% block body %}
{% include 'interface/parts/_sidebar.html.twig' %}
<div class="container-left">
    {% include 'interface/parts/_header.html.twig' %}
    <div class="main-content">
        <div class="row">
        <div class="col-12">
        <div class="col-lg-6">
            {% for users in user %}
                <div class="profile-box">
                    <div class="profiletop"></div>
                    {% if app.user.username == users.username %}
                        <a href="{{ path('fos_user_profile_edit') }}" class="edit-lk">Editer votre profil</a>
                    {% endif %}
                    <div class="av-img">
                        {% if app.user.image == false %}
                            <img src="{{ asset('assets/img/homme.jpg') }}" alt="{{ app.user.username }} - Image Profil">
                        {% else %}
                            <img src="{{ asset('uploads/avatar/'~app.user.image) }}" alt="{{ app.user.username }} - Image Profil">
                        {% endif %}
                    </div>
                    <div class="clearfix"></div>
                    <div class="custom-box">
                        <div class="user-info">
                            <h1>{{ app.user.username|capitalize }}</h1>
                            {% if is_granted('ROLE_USER') and is_granted('ROLE_NATURALIST') == false %}
                                <h2>Passionn√©(e)</h2>
                            {% endif %}
                            {% if is_granted('ROLE_NATURALIST') %}
                                <h2>Naturaliste</h2>
                            {% endif %}
                        </div>

                    </div>
                </div>

            {% endfor %}
        </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}

