{% extends 'base.html.twig' %}

{% block title %}Ajouter une observation{% endblock %}
{% block description %}{% endblock %}

{% block body %}
{% include 'interface/parts/_sidebar.html.twig' %}
<div class="container-left">
    {% include 'interface/parts/_header.html.twig' %}
    <div class="main-content">
        <div class="col-md-8 order-md-1">
            <h1>Devenir Naturaliste</h1>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            <hr class="mb-4">
            {{ form_start(application, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group row">
                <div class="col-md-6">
                    {{ form_label(application.experience) }}
                    {{ form_widget(application.experience) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(application.description) }}
                    {{ form_widget(application.description) }}
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary" name="submit" type="submit">Soumettre votre candidature</button>
            {{ form_end(application) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}

