    <script type="application/javascript">

        var map, marker, infowindow;
        var locations = [];
        var searchUrl = "{{path('map_search')  }}";

/////////////////////////////////////////////////////////////////////////////////////
        // INITIALISATION DE LA CARTE
        function initMap() {
            var center = {lat: 47.12025, lng: 2.123654};
            map = new google.maps.Map(document.getElementById('map'), {
                center: center,
                zoom: 6,
                mapTypeId:google.maps.MapTypeId.ROADMAP
            });

        }
  /////////////////////////////////////////////////////////////////////////////
        // RECHERCHE NOM VERN ET MISE EN PLACE DES MARQUEURS
        infowindow =  new google.maps.InfoWindow();

        $(function () {
            $(document).on('click', '#btn-valider', function () {
                var nomVern = $('#input-nom-vern').val();
                console.log(nomVern);
                $.ajax({
                    url: searchUrl,
                    type: "POST",
                    dataType: "json",
                    data: {"nomVern": nomVern},
                    async: true,
                    success: function (data) {
                        //console.log(data);
                           locations = data;
                            for (var count = 0; count < data.length; count++) {

                                marker = new google.maps.Marker({
                                    position: new google.maps.LatLng(locations[count].latitude, locations[count].longitude),
                                    map: map,
                                    title: locations[count].nomVern

                                });

                                google.maps.event.addListener(marker, 'click', (function (marker, count) {
                                    // console.log("test 1");
                                    return function () {
                                        var contentString = '<div id="content" class="card">'+
                                            '<div id="bodyContent" class="card-body">'+
                                            '<p id="title" class="card-title title">'+locations[count].nomVern+'</p>'+
                                            '<p id="author" class="card-title author">Posté par <b>'+locations[count].username+'</b>'+
                                            '<span class="date-pub">- Validé le'+locations[count].date+'</span></p><hr>'+
                                            '<img src="" alt="">'+
                                            '<p>'+locations[count].description+'</p>'+
                                            '<div class="card-footer text-center"><a href="{{ path('fos_user_registration_register', {'id':1}) }}" class="btn btn-primary text-center">Nous rejoindre</a></div>'+
                                            '</div>'+
                                            '</div>';
                                        infowindow.setContent(contentString);
                                        infowindow.open(map, marker);
                                    }
                                })(marker, count));
                                google.maps.event.addListener(map, 'click', function() {
                                    infowindow.close();
                                });

                            }


                    },
                    error: function () {


                                  //document.getElementById('message').innerHTML='<p>Pas encore d\'observations pour cet oiseau</p>';
                    }
                });
            });
        });
        google.maps.event.addDomListener(window, 'load', initMap);

        //////////////////////////////////////////////////////////////////////////////////////////////


        google.maps.event.addListener(infowindow, 'domready', function() {
            var iwOuter = $('.gm-style-iw');
            var iwBackground = iwOuter.prev();
            iwBackground.children(':nth-child(2)').css({'display' : 'none'});
            iwBackground.children(':nth-child(4)').css({'display' : 'none'});
            var iwCloseBtn = iwOuter.next();
            iwCloseBtn.css({
                opacity: '1',
                right: '38px', top: '3px',
                border: '7px solid #48b5e9',
                'border-radius': '50%',
                'box-shadow': '0 0 5px #3990B9'
            });
            iwCloseBtn.mouseout(function(){
                $(this).css({opacity: '1'});
            });
        });
        //////////////////////////////////////////////////////////////////////////////////////////
        // CLEAR MAP POUR RELANCER RECHERCHE
        $('#clearMap').click(function (data) {
            data.preventDefault();
            location.reload();
        });
        ////////////////////////////////////////////////////////////////////////////////
    </script>

     

